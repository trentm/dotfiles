# A grep for full `import ... from '$1'` in JS/TS code.
# (Some of the regex complexity is because non-greedy .*? doesn't seem to
# work for me with rg.)
function rgimport() {
  local name
  name="$1"
  shift
  rg --multiline --multiline-dotall "import(\s+type)? (\{?[^{;]*|\*\s+as\s+\w+) from '[^']*${name}[^']*'" $@
}
function rgrequire() {
  local name
  name="$1"
  shift
  rg --multiline --multiline-dotall "require\('[^']*${name}[^']*'\)" $@
}
