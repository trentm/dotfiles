{
    "telemetry.enableTelemetry": false,

    "editor.renderWhitespace": "all",
    "editor.find.autoFindInSelection": "multiline",
    "editor.rulers": [
        80,
        100
    ],
    "editor.scrollBeyondLastLine": false,
    "editor.minimap.enabled": false,
    "editor.cursorSurroundingLines": 5,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },

    // Hover tips (can get in the way sometimes)
    "editor.hover.enabled": true,

    // Intellisense
    // https://code.visualstudio.com/docs/editor/intellisense
    "editor.acceptSuggestionOnEnter": "off",
    "editor.tabCompletion": "on",
    "editor.parameterHints.enabled": false,

    // Turning on standardjs autoFixOnSave results in unresolvable
    // fighting on some stylings: VSCode save will do `function foo()`
    // and then the style checking and `npx standard` will complain
    // that it wants `function foo ()`. Lovely. It would be nice to
    // resolve this.
    // "editor.formatOnSave": true,
    // "standard.autoFixOnSave": true

    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "go.formatTool": "goimports",
    // https://github.com/microsoft/vscode-go/wiki/Go-modules-support-in-Visual-Studio-Code
    "go.useLanguageServer": true,
    "go.toolsManagement.autoUpdate": true,

    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.colorTheme": "Default Light+",
    "workbench.settings.openDefaultKeybindings": true,
    "workbench.statusBar.visible": true,
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        },
        {
            "viewType": "jupyter-notebook",
            "filenamePattern": "*.ipynb"
        }
    ],
    "workbench.startupEditor": "newUntitledFile",

    "window.newWindowDimensions": "offset",
    "window.title": "${activeEditorLong}${separator}${rootName}",

    "vim.useSystemClipboard": true,
    "vim.overrideCopy": false,
    "vim.ignorecase": false
}
