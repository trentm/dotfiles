{
    "telemetry.enableTelemetry": false,
    "editor.renderWhitespace": "all",
    "editor.find.autoFindInSelection": "multiline",
    "editor.rulers": [
        80,
        100
    ],
    "editor.scrollBeyondLastLine": false,
    "editor.minimap.enabled": false,
    "editor.cursorSurroundingLines": 5,
    // https://code.visualstudio.com/docs/languages/javascript#_code-actions-on-save
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    // Font
    // https://github.com/tonsky/FiraCode/wiki/VS-Code-Instructions
    "editor.fontSize": 13,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": false,
    // Hover tips (can get in the way sometimes)
    "editor.hover.enabled": true,
    // Intellisense
    // https://code.visualstudio.com/docs/editor/intellisense
    "editor.acceptSuggestionOnEnter": "off",
    "editor.tabCompletion": "on",
    "editor.parameterHints.enabled": false,
    // Turning on standardjs autoFixOnSave results in unresolvable
    // fighting on some stylings: VSCode save will do `function foo()`
    // and then the style checking and `npx standard` will complain
    // that it wants `function foo ()`. Lovely. It would be nice to
    // resolve this.
    // "editor.formatOnSave": true,
    // "standard.autoFixOnSave": true
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "go.formatTool": "goimports",
    // https://github.com/microsoft/vscode-go/wiki/Go-modules-support-in-Visual-Studio-Code
    "go.useLanguageServer": true,
    "go.toolsManagement.autoUpdate": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.settings.openDefaultKeybindings": true,
    "workbench.statusBar.visible": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.startupEditor": "newUntitledFile",
    "window.title": "${activeEditorLong}${separator}${rootName}",
    // AFAICT `newWindowDimensions` does not work.
    "window.newWindowDimensions": "offset",
    "vim.useSystemClipboard": true,
    "vim.overrideCopy": false,
    "vim.ignorecase": false,
    "vim.startInInsertMode": false, // I think this is default, but I'm not getting the mode I want on switch to tab.
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "line",
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.editor.enablePreview": false,
    "python.analysis.autoSearchPaths": false,
    "python.languageServer": "None",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.bracketPairColorization.enabled": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "workbench.colorTheme": "Default Light Modern",
    "svelte.enable-ts-plugin": true,
    "[svelte]": {
        "editor.defaultFormatter": "svelte.svelte-vscode"
    },
    "[yaml]": {
        "workbench.editor.languageDetection": false
    },
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "rest-client.previewResponseInUntitledDocument": true,
    "rest-client.previewResponsePanelTakeFocus": false,
    "rest-client.previewOption": "exchange",
    "rest-client.enableTelemetry": false,
    "svelte.enable-ts-plugin": true,
    "svelte.plugin.svelte.note-new-transformation": false,
    "redhat.telemetry.enabled": false,
    "editor.copyWithSyntaxHighlighting": false,
    "azureFunctions.showProjectWarning": false,
    "git.openRepositoryInParentFolders": "never",
    // https://github.com/tailscale/hujson#visual-studio-code-association
    "files.associations": {
        "*.hujson": "jsonc"
    },
    "json.schemas": [
        {
            "fileMatch": [
                "*.hujson"
            ],
            "schema": {
                "allowTrailingCommas": true
            }
        }
    ],
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.quickSuggestions": {
        "other": "off"
    },
    "editor.inlineSuggest.enabled": false,
    "editor.quickSuggestionsDelay": 200,
    "workbench.editor.empty.hint": "hidden",
    "editor.stickyScroll.enabled": false,
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "chat.commandCenter.enabled": false,
    "search.smartCase": true,
    "search.useParentIgnoreFiles": true,
    "search.searchEditor.reusePriorSearchConfiguration": true,
    "chat.agent.enabled": false,
    "telemetry.feedback.enabled": false,
    "accessibility.verbosity.inlineChat": false,
    "inlineChat.holdToSpeech": false,
    "inlineChat.lineNaturalLanguageHint": false
}
